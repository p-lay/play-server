{
  "name": "play-server",
  "version": "1.0.0",
  "description": "description",
  "author": "Matthew5",
  "license": "MIT",
  "scripts": {
    "format": "prettier --write \"src/**/*.ts\"",
    "start": "nodemon",
    "debug": "nodemon --config nodemon-debug.json",
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "build": "rimraf dist && tsc -p tsconfig.build.json",
    "d:sit": "node deploy/index.js",
    "deploy": "node deploy/index.js --prod",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "gen": "ts-node nest.gen.ts && prettier --write ./src/controller/* ./src/service/* ./src/module/*",
    "postinstall": "git submodule init && git submodule update --remote"
  },
  "dependencies": {
    "@nestjs/common": "^5.4.0",
    "@nestjs/core": "^5.4.0",
    "@nestjs/typeorm": "^6.1.2",
    "@types/lodash": "^4.14.135",
    "@types/qiniu": "^7.0.1",
    "cross-env": "^5.2.0",
    "dayjs": "^1.8.15",
    "lodash": "^4.17.11",
    "md5": "^2.3.0",
    "mysql": "^2.17.1",
    "nest-ts-code-gen": "^1.0.1",
    "node-rsa": "^1.1.1",
    "qiniu": "^7.2.2",
    "reflect-metadata": "^0.1.12",
    "rimraf": "^2.6.2",
    "rxjs": "^6.2.2",
    "typeorm": "^0.2.25",
    "typescript": "^3.0.1"
  },
  "devDependencies": {
    "@nestjs/testing": "^5.1.0",
    "@types/express": "^4.16.0",
    "@types/jest": "^23.3.1",
    "@types/node": "^10.7.1",
    "@types/supertest": "^2.0.5",
    "jest": "^23.5.0",
    "nodemon": "^1.18.3",
    "prettier": "^1.14.2",
    "supertest": "^3.1.0",
    "ts-jest": "^23.1.3",
    "ts-loader": "^4.4.2",
    "ts-node": "^7.0.1",
    "tsconfig-paths": "^3.5.0",
    "tslint": "5.11.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
